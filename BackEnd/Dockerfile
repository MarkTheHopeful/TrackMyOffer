FROM gradle:8.5-jdk17 AS build

WORKDIR /app
COPY . /app/
RUN gradle build --no-daemon

FROM eclipse-temurin:17-jre

WORKDIR /app
COPY --from=build /app/build/libs/*.jar /app/server.jar

ARG A_PORT=4001
ARG A_HOST=0.0.0.0
ARG A_OAUTH_HOST=0.0.0.0
ARG A_OAUTH_PORT=4001
ARG A_OAUTH_URL=http://$A_OAUTH_HOST:$A_OAUTH_PORT
ARG A_PROVIDER_HOST=0.0.0.0
ARG A_PROVIDER_PORT=4002
ARG A_PROVIDER_URL=http://$A_PROVIDER_HOST:$A_PROVIDER_PORT
ARG A_VITE_HOST=0.0.0.0
ARG A_VITE_PORT=4000
ARG A_VITE_URL=http://$A_VITE_HOST:$A_VITE_PORT
ARG A_DB_HOST=utility_db
ARG A_DB_PORT=5432
ARG A_DB_PASSWORD=utility_password
ARG A_LOG_LEVEL=DEBUG


ENV PORT=$A_PORT
ENV HOST=$A_HOST
ENV OAUTH_HOST=$A_OAUTH_HOST
ENV OAUTH_PORT=$A_OAUTH_PORT
ENV OAUTH_URL=$A_OAUTH_URL
ENV PROVIDER_HOST=$A_PROVIDER_HOST
ENV PROVIDER_PORT=$A_PROVIDER_PORT
ENV PROVIDER_URL=$A_PROVIDER_URL
ENV VITE_HOST=$A_VITE_HOST
ENV VITE_PORT=$A_VITE_PORT
ENV VITE_URL=$A_VITE_URL
ENV DB_HOST=$A_DB_HOST
ENV DB_PORT=$A_DB_PORT
ENV DB_PASSWORD=$A_DB_PASSWORD
ENV LOG_LEVEL=$A_LOG_LEVEL

# Expose the port
EXPOSE $PORT

# Run the application
ENTRYPOINT ["java", "-jar", "/app/server.jar"]
