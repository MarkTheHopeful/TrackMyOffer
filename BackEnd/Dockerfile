FROM gradle:8.5-jdk17 AS build

WORKDIR /app
COPY . /app/
RUN gradle build --no-daemon

FROM eclipse-temurin:17-jre

WORKDIR /app
COPY --from=build /app/build/libs/*.jar /app/server.jar

ARG A_PORT=4001
ARG A_HOST=0.0.0.0
ARG A_OAUTH_URL=http://0.0.0.0:4001
ARG A_PROVIDER_URL=http://0.0.0.0:4002
ARG A_VITE_URL=http://0.0.0.0:4000
ARG A_DB_HOST=utility_db
ARG A_DB_PORT=5432
ARG A_DB_PASSWORD=utility_password
ARG A_LOG_LEVEL=DEBUG
ARG A_DEBUG_ENDPOINTS=false
ARG A_CLIENT_SECRET=mark_pil_pivo
ARG A_CLIENT_ID=balkonom_ne_polzyemsya


ENV PORT=$A_PORT
ENV HOST=$A_HOST
ENV OAUTH_URL=$A_OAUTH_URL
ENV PROVIDER_URL=$A_PROVIDER_URL
ENV VITE_URL=$A_VITE_URL
ENV DB_HOST=$A_DB_HOST
ENV DB_PORT=$A_DB_PORT
ENV DB_PASSWORD=$A_DB_PASSWORD
ENV LOG_LEVEL=$A_LOG_LEVEL
ENV DEBUG_ENDPOINTS=$A_DEBUG_ENDPOINTS
ENV CLIENT_SECRET=$A_CLIENT_SECRET
ENV CLIENT_ID=$A_CLIENT_ID

# Expose the port
EXPOSE $PORT

# Run the application
ENTRYPOINT ["java", "-jar", "/app/server.jar"]
